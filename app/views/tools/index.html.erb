<h1>Nested Resources for All Tools</h1>

<% @tools.each do |tool| %>
  <ul>
    <li><%= link_to tool.name, tool_path(tool.id) %> | <span class="resources">Resources</span> <% if current_user %>| <%= link_to "Add Resource (AJAX)", new_tool_resource_path(tool.id), :class => 'btn-resources' %><% end %></li>

    <div class="hidden-resources">
      <% tool.resources.each do |resource| %>

      <ul>

          <li><%= link_to resource.name, tool_resource_path(tool, resource) %> | <a href="<%= resource.url %>" target="_blank"><%= resource.url %></a></li>
          <ul>
            <li><%= resource.summary %></li>
          </ul>

      </ul>

      <% end %>
    </div>
  </ul>
<% end %>



<h1>Nested Resources for All Tools</h1>



<% @tools.each do |tool| %>
  <ul>

    <li><%= link_to tool.name, tool_path(tool.id) %> | <span id="show"><span id="resources">Show Resources</span></span> | <%= link_to "Add Resource (AJAX)", new_tool_resource_path(tool.id), :class => 'btn-resources' %></li>

    <div id="hidden-resources">
      <% tool.resources.each do |resource| %>
      <ul>
        <li><%= link_to resource.name, tool_resource_path(tool, resource) %> | <a href="<%= resource.url %>"><%= resource.url %></a></li>
        <!--ionicons not working!
        <li class="ion-ionic" data-pack="default"></li-->

          <ul>
            <li><%= resource.summary %></li>
          </ul>
      </ul>
      <% end %>
    </div>
  </ul>
<% end %>
